.blog-article-comment
  width: 80%
  background-color bgc-normal
  padding 20px
  margin-top 30px
.blog-article-comment-area
  display flex
  flex-direction: column
  justify-content: space-around
  align-items: center
  width 80%
  height: 130px
  margin: 0 auto
  margin-bottom: 50px
  & textarea
    width: 100%
    resize none
  & input
    width 100%
  & h3
    text-align: left
.blog-comment-user
  padding 10px 10px
  & img
    vertical-align: bottom 
.blog-article-comment-list
  display flex
  flex-direction: column
  justify-content: space-around
  padding 10px 10px
  & li
    padding 20px
    margin-top 10px
  & img
    height 30px
    width 30px
    border-radius 5px
    margin-left 10px
  & h3
    text-align: left
.blog-comment-content
  padding 10px 10px
.blog-comment-date
  padding 10px 10px
  & p
    text-align: right
.line-row-top::before
  content: ""
  display block
  width 100%
  height 1px
  transform: scaleY(.5) translateY(-10px)
  background-color #222
.line-row-bt::after
  content: ""
  display block
  width 100%
  height 1px
  transform: scaleY(.5)
  background-color #222
.line-column::after
  content: ""
  display block
  width 1px
  height 100%
  transform: scaleX(.5)
  background-color #222
.glyphicon-user
  font-size 18px
  margin-right 4px

