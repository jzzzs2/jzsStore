<div class="blog-info-content">
  <form class="form-horizontal" action="javascript:;" id="info">
    {{#each formData}}
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">{{name}}</label>
      <div class="col-sm-6">
        <input type="{{inputType}}" class="form-control" {{#if readonly}}readonly{{/if}} placeholder="{{placeHolder}}"
          name="{{inputName}}" {{#if value}}value="{{value}}" {{/if}}>
      </div>
    </div>
    {{/each}}
    <div class="form-group form-submit-btns">
      {{#each btns}}
      <button type="submit" class="btn btn-default" data-btn-type="{{type}}"
        data-type="{{pageType}}">{{resName}}</button>
      {{/each}}
    </div>
  </form>
</div>