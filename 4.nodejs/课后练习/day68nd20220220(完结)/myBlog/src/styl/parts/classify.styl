.blog-classify-container
  width 500px
  height 80vh
  background-color: #fff
  padding 10px
  border-radius: 8px
  p
    color #fff
    font-size: 20px
  a:hover
    transform: scale(1.1)
a.blog-classify-show
  display flex
  flex-direction: column
  justify-content: center
  align-items: center
  box-shadow: 0 0 2px shadow-light inset
  background-color page-main-color
  font-size: 14px
  & p
    font-size: 12px
  &:hover p
    cursor: pointer
    color pink
.blog-classify-show:nth-of-type(2n)
  background-color shadow-light
.blog-classify-show:nth-of-type(3n)
  background-color page-bgc
for n in 1 2 3 4 5 6 7 8
  .row-{n}
    width (n + 1) * 2vw
  .column-{n}
    height n * 4vw
.blog-classify-lost
  display flex
  justify-content: center
  align-items: center
  width 100%
  height: 60vh
  background-color #fff
.blog-classify-lost p
  width 66%
  padding: 10px
  color: #444
  font-size: 12px
  border: 1px solid skyblue
  border-radius: 10px 10px
  text-align: center
.selected
  background-color pink
  color #fff
.blog-classify-add
  display: flex
  justify-content: center
  align-items: center
  font-size 50px
  background-color skyblue
a.touch
  cursor pointer
a.touch:hover 
  background-color #222
  color: #fff
p.touch
  cursor pointer
p.touch:hover 
  background-color #222
  color: #fff