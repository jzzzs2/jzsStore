main.container
  padding 30px 20px
  transform translate(0,0)
.blog-main-intro
  display flex
  flex-direction column
  justify-content space-around
  align-items center
  box-sizing: border-box
  padding 2 * pad-normal 
  box-shadow 0 0 2px line-color
  background-color bgc-normal
.blog-main-intro img
  height 200px
  width auto
  padding pad-normal * 2
  border-radius: 50%
  box-shadow 0 0 2px shadow
.blog-main-intro p.nickname
  font-size 16px
  font-weight 700
  padding pad-normal pad-normal * 2
  text-align center
.blog-content-intro
  position: relative
  display: flex
  justify-content: space-between
  width: 20%
  padding-bottom: pad-normal * 2
.blog-intro-num
  display: flex
  flex-direction: column
  align-items: center
.blog-content-intro::after
  position: absolute
  left 50%
  top 6px
  content: ""
  display: block
  height: 32px
  width 1px
  background-color line-color
.blog-intro-type
  display: flex
  flex-direction: column
  align-items: center
.blog-content-story
  box-sizing border-box
  padding pad-normal * 2
  font-size 12px
.blog-main-content
  box-sizing: border-box
  padding: 0 pad-normal * 6
  overflow-y auto
  overflow-x hidden
  height 80vh
.blog-main-content .wrap
  display: flex
  flex-direction: column
  justify-content: space-evenly
  align-items: center
  box-sizing border-box
  padding pad-normal * 2
  // overflow-y: auto
  // height 80vh
  // box-shadow 0 0 2px line-color
.blog-content--blogs
  width 90%
  text-align: center
  background-color bgc-normal
  margin-bottom: pad-normal
.blog-content--blogs h2
  padding: pad-normal * 2  0
.blog-content--blogs .time span
  padding-left: 2px
.blog-content--blogs img
  height 230px
  width: auto
  border-radius: 0
.blog-content--blogs .blog-easyIntro
  box-sizing: border-box
  padding: 0 pad-normal * 2
  text-indent: 2em
  text-align: left
.blog-content--intro
  box-sizing: border-box
  padding: 0 pad-normal * 2
  display: flex
  justify-content: space-between
.blog-edit
  height: 80%
  background-color #fff
  padding 8px
  border-radius: 8px
.blog-classify-wrap
  display flex
  justify-content: start
  flex-wrap wrap
  align-content: space-around
.blog-classify-wrap li
  padding: 6px 10px
  margin 10px 6px
  border 1px solid pink
  border-radius: 6px 6px
  &:hover
    cursor: pointer
  &.selected
    background-color pink
    color #fff

